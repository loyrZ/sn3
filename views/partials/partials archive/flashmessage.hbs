<div id="flash-message">
    {{#if messages.error}}
        <div class = "alert alert-danger" style="padding: 10px; margin-bottom: 15px; border: 1px solid #f5c6cb; background-color: #f8d7da; color: #721c24; border-radius: 5px;">
            {{messages.error}}
        </div>
    {{else if messages.success}}
        <div class = "alert alert-success" style="padding: 10px; margin-bottom: 15px; border: 1px solid #c3e6cb; background-color: #d4edda; color: #155724; border-radius: 5px;">
            {{messages.success}}
        </div>
    {{/if}}
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const flashMessage = document.querySelector('#flash-message div');

        if (flashMessage) {
            setTimeout(() => {
                flashMessage.style.transition = 'opacity 0.5s';
                flashMessage.style.opacity = '0';
            }, 3000); // 3 seconds before fading out

            flashMessage.addEventListener('transitionend', function () {
                flashMessage.remove();
            });
        }
    });
</script>
